 <section class="featured-courses vertical-column courses-wrap">
        <div class="container">
            <div class="row mx-m-25">
                <div class="col-12 px-25">
                    <header class="heading flex flex-wrap justify-content-between align-items-center">
                        <h2 class="entry-title">Featured Courses</h2>

                        <nav class="courses-menu mt-3 mt-lg-0">
                            <ul class="flex flex-wrap justify-content-md-end align-items-center">
                                <li class="active"><a href="#">All</a></li>
                                <% @courseCategories.each do |category| %>
                                    <li><a href="#"><%= category.name %></a></li>
                                <%end%>
                                
                            </ul>
                        </nav><!-- .courses-menu -->
                    </header><!-- .heading -->
                </div><!-- .col -->

                <% @courses.each do |c| %>
                    <div class="col-12 col-md-6 col-lg-4 px-25">
                        <div class="course-content">
                            <figure class="course-thumbnail">
                                <a class="course-popup" href="course/<%= c.id %>">
                                <%= render partial: 'layouts/image', locals: {obj: c, fa_class: 'aa', img_px: '280'} %>
                            </figure><!-- .course-thumbnail -->

                            <div class="course-content-wrap">
                                <header class="entry-header">
                                    <h2 class="entry-title"><a class="course-popup" href="course/<%= c.id %>"><%= c.title %></a></h2>

                                    <div class="entry-meta flex align-items-center">
                                        <div class="">Created at <%= c.created_at.strftime("%b %d, %Y") %></div>
                                    </div><!-- .course-date -->
                                </header><!-- .entry-header -->
                                <style>
                                    .mfp-content {
                                        z-index: 99999999;
                                    }
                                </style>
                                <script>
                                    $(document).ready(function() {

                                    $('.course-popup').magnificPopup({
                                    type: 'ajax',
                                    midClick: true,
                                    mainClass: 'mfp-fade',
                                    closeOnBgClick: false 
                                    });

                                    
                                    });
                                </script> 
                                <footer class="entry-footer flex justify-content-between align-items-center">
                                    <div class="course-cost">
                                        Free</span>
                                    </div><!-- .course-cost -->

                                    <%# <div class="course-ratings flex justify-content-end align-items-center">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star-o"></span>

                                        <span class="course-ratings-count">(4 votes)</span>
                                    </div><!-- .course-ratings --> %>
                                </footer><!-- .entry-footer -->
                            </div><!-- .course-content-wrap -->
                        </div><!-- .course-content -->
                    </div><!-- .col -->
                <% end %>

            

                <div class="col-12 px-25 flex justify-content-center">
                    <a class="btn" href="<%= courses_url %>">view all courses</a>
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    </section><!-- .courses-wrap -->