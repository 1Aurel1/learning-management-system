    <section class="featured-courses horizontal-column courses-wrap">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <header class="heading flex justify-content-between align-items-center">
                        <h2 class="entry-title">Featured Courses</h2>

                        <a class="btn mt-4 mt-sm-0" href="#">view all</a>
                    </header><!-- .heading -->
                </div><!-- .col -->
                
                <% @featured_courses.each do |c| %>
                    <div class="col-12 col-lg-6">
                        <div class="course-content flex flex-wrap justify-content-between align-content-lg-stretch">
                            <figure class="course-thumbnail">
                                <a href="course/<%= c.id %>"><%= render partial: 'layouts/image', locals: {obj: c, fa_class: 'aa', img_px: '280'} %></a>
                            </figure><!-- .course-thumbnail -->

                            <div class="course-content-wrap">
                                <header class="entry-header">
                                    <%
=begin%>
 <div class="course-ratings flex align-items-center">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star-o"></span>

                                        <span class="course-ratings-count">(4 votes)</span>
                                    </div><!-- .course-ratings --> 
<%
=end%>

                                    <h2 class="entry-title"><a href="course/<%= c.id %>">Basic English</a></h2>

                                    <div class="entry-meta flex flex-wrap align-items-center">
                                        <!-- <div class="course-author"><a href="#"></a></div> -->

                                        <div class="course-date">July 21, 2019</div>
                                    </div><!-- .course-date -->
                                </header><!-- .entry-header -->

                                <footer class="entry-footer flex justify-content-between align-items-center">
                                    <div class="course-cost">
                                        <span class="free-cost">Free</span>
                                    </div><!-- .course-cost -->
                                </footer><!-- .entry-footer -->
                            </div><!-- .course-content-wrap -->
                        </div><!-- .course-content -->
                    </div><!-- .col -->
                <% end %>
                
            </div><!-- .row -->
        </div><!-- .container -->
    </section><!-- .courses-wrap -->