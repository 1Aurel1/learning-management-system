<div class="card card-body">
  <h2 class="card-title" style="float: left;">
    <% if device.registration_id.present? %>
    <i class='fa fa-bell' title='Notification: Enabled'></i>
    <% else %>
    <i class='fa fa-bell-slash-o' title='Notification: Invalid'></i>
    <% end %>
    <% if device.title.present? %>
    <%= device.title %>
    <% else %>
    <%= '（Unregistered）' %>
    <% end %>
  </h2>
  <div style="float: right;">
    <%= render partial: 'layouts/buttons/edit', locals: {action_hash: {action: 'ajax_edit', id: device.id}, id_attr: '', class_attr: 'btn btn-primary'} %>
    <%= render partial: 'layouts/buttons/delete', locals: {action_hash: {action: 'ajax_destroy', id: device.id}, id_attr: '', class_attr: 'btn btn-danger'} %>
    <% if device.registration_id.present? %>
    <%= link_to raw("<i class='fa fa-bell'></i> Test transmission"), {action: 'ajax_push', id:device.registration_id},{class: 'btn btn-info', remote: true} %>
    <% end %>
  </div>
</div>
